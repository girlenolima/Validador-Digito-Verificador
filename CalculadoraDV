package dv;

import java.util.ArrayList;

public class CalculadoraDV {

    private static final int FACTOR_11_MUL = 10;
    private static final int FACTOR_10_REST = 11;
    private static final int WEIGHTS[] = {5, 4, 3, 2};

    public String calcularAgenciaDV(int... input) {

        String mess;
        Integer result = 0;
        if (input.length < 4) {
            return mess = "Qtd digitos inferior a 4";
        } else {
            for (int i = 0; i < input.length; i++) {
                result += input[i] * WEIGHTS[i];
            }
            result *= FACTOR_11_MUL;
            result %= FACTOR_10_REST;
        }

        return mess = result.toString();

    }

}
